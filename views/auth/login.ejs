<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage  %></div>
        <% } %>
        <form class="login-form" action="/login" method="POST" novalidate>
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input class="<%=validationErrors.email ? 'invalid' : ''%>" type="email" name="email" id="email" value="<%=prevInputValues.email%>">
                <span><%=validationErrors.email ? validationErrors.email : ""%></span>
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input class="<%=validationErrors.password ? 'invalid' : ''%>" type="password" name="password" id="password" value="<%=prevInputValues.password%>">
                <span><%=validationErrors.password ? validationErrors.password : ""%></span>
            </div>
            <input  type="hidden" name="_csrf" value="<%= csrf %>">
            <button class="btn" type="submit">Login</button>
        </form>
        <a class="btn" href="/reset">Reset password</a> 
    </main>
<%- include('../includes/end.ejs') %>